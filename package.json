{
  "name": "@whaoa/react-modal-manager",
  "version": "0.0.0",
  "description": "A lightweight modal manager for React.",
  "author": "whaoa",
  "license": "MIT",
  "homepage": "https://github.com/whaoa/react-modal-manager#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whaoa/react-modal-manager.git"
  },
  "bugs": {
    "url": "https://github.com/whaoa/react-modal-manager/issues"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "keywords": [
    "react",
    "modal",
    "modal-manager"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "~2.21.3",
    "@eslint-react/eslint-plugin": "^1.5.30",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^18.0.0",
    "ts-jest": "^29.2.3",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  }
}
